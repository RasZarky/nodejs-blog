<div class="author">
    <h1 class="author__header">Hi, I am Abdul Razak Abubakari</h1>
    <p. class="author__body">Web and Mobile App developer</p>
</div>

<img src="/img/mypic.png" alt="My image" class="hero-image" width="981", height="528" >

<section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>
   
    <ul class="articles-ul">

        <% data.forEach(post => { %>
         
             <li class="articles-li" >
            <a href="/post/<%= post._id %>" class="articles__link">
                <span ><%= post.title %></span>
                <span class="articles-list__date"><%=  post.createdAt.toDateString() %></span>
            </a>
            </li>

        <% }) %>


        
    </ul>

    <% if (nextPage !== null) { %>
     <a href="/?page=<%= nextPage %>" class="pagination">&lt; View older posts</a>
    <% } %>
    
</section>